---
import { Search } from 'astro-icon/lucide';

// Get current search query if any
const currentQuery = Astro.url.searchParams.get('q') || '';
---

<form action="/search" method="get" class="relative max-w-md w-full">
  <div class="relative">
    <Search class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 h-4 w-4" />
    <input
      type="text"
      name="q"
      placeholder="Search Products"
      value={currentQuery}
      class="w-full py-2 pl-10 pr-4 border rounded-md bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500"
    />
  </div>
</form>
