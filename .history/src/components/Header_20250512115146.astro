---
import { Search } from 'lucide-react';
---

<header class="border-b sticky top-0 bg-white z-10">
  <div class="container mx-auto px-4 py-3 flex items-center justify-between">
    <div class="flex items-center gap-2">
      <a href="/" class="flex items-center gap-2">
        <div class="bg-indigo-600 text-white p-1 rounded">
          <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
          </svg>
        </div>
        <span class="font-bold text-xl">10015</span>
      </a>
      <form method="GET" action="/" class="flex items-center gap-2 ml-4">
        <input
          type="text"
          name="search"
          placeholder="Buscar..."
          value={Astro.url.searchParams.get('search') || ''}
          class="border rounded px-2 py-1 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
        />
        <button type="submit" class="p-1">
          <Search class="w-5 h-5 text-gray-500" />
        </button>
      </form>
    </div>


    <div class="flex items-center gap-3">
      {/* Botones eliminados, no se muestra nada aqu√≠ */}
    </div>
  </div>
</header>
